<h2>News</h2>
<br>
<% @articles.each do |article| %>
  <h3><%= article["title"] %></h3>
  <img src="<%= article["urlToImage"] %>" alt="">
  <p><%= article["description"] %></p><a href="<%= article["url"] %>" target="_blank">Read more</a><a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= article["url"] %>" rel="external" class="liicon" target="_blank" onclick="window.open('https://www.linkedin.com/shareArticle?mini=true&url=<%= article["url"] %>', 'linkedin_share', 'menubar=1,resizable=1,width=750,height=450')"></a>
  <p><%= article["author"] %></p>
  <p><%= article["publishedAt"] %></p>
  <br>
<% end %>


